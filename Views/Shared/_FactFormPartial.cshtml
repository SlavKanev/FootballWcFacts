@model FactModel

<div class="row">
    <style>
        body {
            background-color: lightslategrey;
        }</style>
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title" style="color:blue; font-family: Verdana"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" style="color:blue; font-family: Verdana"></label>
                <textarea asp-for="Description" rows="10" class="form-control" placeholder="Tell us about ....."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" style="color:blue; font-family: Verdana"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentId" style="color:blue; font-family: Verdana"></label>
                <select asp-for="TournamentId" class="form-control">
                    @foreach (var tournament in Model.FactTournaments)
                    {
                        <option value="@tournament.Id">@tournament.Name</option>
                    }
                </select>
                <span asp-validation-for="TournamentId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Add Fact" />
            </div>
        </form>
    </div>
</div>

