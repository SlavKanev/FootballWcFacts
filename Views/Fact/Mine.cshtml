@model IEnumerable<FactServiceModel>

@{
    ViewBag.Title = "My Facts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.Any())
{
        <div class="row">

        @foreach (var fact in Model)
        {
             <partial name="_FactPartial" model="@fact"></partial>
        }
        </div>
}
else
{
     <h3 class="text-center">You still don't have facts!'</h3>   
}

<style>
    body {
        background-color: lightslategrey;

    }

    h2 {
        background-image: conic-gradient(black, black, black);
        font-size: 50px;
        font-weight: 600;
        color: forestgreen;
        text-shadow: 0px 0px 5px blue, 0px 0px 10px red, 0px 0px 10px red, 0px 0px 20px #b393d3;
    }
    </style>
