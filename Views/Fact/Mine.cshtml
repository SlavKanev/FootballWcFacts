@model IEnumerable<FactServiceModel>

@{
    ViewBag.Title = "My Facts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.Any())
{
        <div class="row">

        @foreach (var fact in Model)
        {
             <partial name="_FactPartial" model="@fact"></partial>
        }
        </div>
}

<style>
    body {
        background-color: lightslategrey;

    }

    h2 {
        background-image: conic-gradient(white, blue, blue);
        font-size: 50px;
        font-weight: 600;
        color: black;
        text-shadow: 0px 0px 5px #b393d3, 0px 0px 10px #b393d3, 0px 0px 10px #b393d3,
        0px 0px 20px #b393d3;
    }
    </style>
